<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
      version="3.0"> 

	<display-name>odontologia</display-name>
	
		<welcome-file-list>
    		<welcome-file>login.jsf</welcome-file>
  		</welcome-file-list>
	
	<!-- Soporte para Spring -->
	
		<listener>
			<listener-class>
				org.springframework.web.context.ContextLoaderListener
			</listener-class>
  		</listener>
  		<listener>
			<listener-class>
				org.springframework.web.context.request.RequestContextListener
			</listener-class>
		</listener>
		
	<!-- Estado del proyecto -->
	
		<context-param>
    		<param-name>javax.faces.PROJECT_STAGE</param-name>
    		<param-value>Development</param-value>
  		</context-param>
  		
  	<!-- Mapeo de JSF -->
  	
  		<servlet>
    		<servlet-name>facesServlet</servlet-name>
    		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>    		
    		<load-on-startup>1</load-on-startup>
  		</servlet>
  		
  		<servlet>
    		<servlet-name>sesionServlet</servlet-name>
    		<servlet-class>com.odontologia.servlet.InvalidateSession</servlet-class>    		
    		<load-on-startup>2</load-on-startup>
  		</servlet>
  	
  	<!-- 	<filter>
  			<filter-name>AuthenticationFilter</filter-name>
  			<filter-class>com.odontologia.filter.AuthenticationFilter</filter-class>
  		</filter>	
  		
  		  <filter-mapping>
    		<filter-name>AuthenticationFilter</filter-name>
    		<url-pattern>/*</url-pattern>
  		  </filter-mapping> -->
  		
  	
  	<servlet-mapping>
    	<servlet-name>facesServlet</servlet-name>
    	<url-pattern>*.jsf</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
    <servlet-name>facesServlet</servlet-name>
    	<url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>

    <context-param>
        <param-name>primefaces.THEME</param-name>
        <param-value>excite-bike</param-value>
    </context-param>
    
</web-app>